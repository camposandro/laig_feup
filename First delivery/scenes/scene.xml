<yas>

    <!-- Initial values -->
    <scene root="root" referenceLength="0.25"/>

    <!-- Views specification -->
    <views default="onlyView">

        <perspective id="1" near="0.1" far="500" angle="1">
            <from x="10" y="0" z="0"/>
            <to x="-10" y="0" z="0"/>
        </perspective>

        <ortho id="2" near="0.1" far="500" left="-10" right="10" top="10" bottom="-10"/>
    
    </views>

    <!-- Ilumination parameters -->
    <ambient>
        <ambient r="0.3" g="0.5" b="1" a="1"/>
        <background r="0" g="0" b="0" a="1"/>
    </ambient>

    <!-- Light sources -->
    <lights>
        <omni id="1" enabled="1">
            <location x="0" y="30" z="0" w="1"/>
            <ambient r="0" g="0" b="0" a="0"/>
            <diffuse r="0.8" g="0.8" b="0.8" a="0.8"/>
            <specular r="0.1" g="0.1" b="0.1" a="0.1"/>
        </omni>
        <omni id="2" enabled="0">
            <location x="20" y="0" z="0" w="1"/>
            <ambient r="0" g="0" b="0" a="0"/>
            <diffuse r="0.6" g="0.6" b="0.6" a="0.5"/>
            <specular r="0.2" g="0.2" b="0.2" a="0.3"/>
        </omni>
    </lights>

    <!-- Textures -->
    <textures>
        <texture id="1" file="textures/vaporwave.png"/>
    </textures>

    <!-- Materials -->
    <materials>
        <material id="defaultMaterial" shininess="1">
            <emission r="0.0" g="0.0" b="0.0" a="1"/>  
            <ambient r="0.4" g="0.4" b="0.4" a="1"/>   
            <diffuse r="0.4" g="0.4" b="0.4" a="1"/> 
            <specular r="0.0" g="0.0" b="0.0" a="1"/>   
        </material>
    </materials>

    <!-- Transformations -->
    <transformations>
        <transformation id="trfFace1">
            <translate x="0.5" y="0.5" z="0.5"/>
        </transformation>

        <transformation id="trfFace2">
            <translate x="0.5" y="0.5" z="0.5"/>
            <rotate axis="y" angle="-90"/>
        </transformation>

        <transformation id="trfFace3">
            <translate x="0.5" y="0.5" z="0.5"/>
            <rotate axis="y" angle="90"/>
        </transformation>

        <transformation id="trfFace4">
            <translate x="0.5" y="0.5" z="0.5"/>
            <rotate axis="y" angle="180"/>
        </transformation>

        <transformation id="trfFace5">
            <translate x="0.5" y="0.5" z="0.5"/>
            <rotate axis="x" angle="-90"/>
        </transformation>

        <transformation id="trfFace6">
            <translate x= "0.5" y="0.5" z="0.5"/>
            <rotate axis="x" angle="90"/>
        </transformation>
    </transformations>

    <!-- Primitive objects -->
    <primitives>
        <primitive id="rect">
            <rectangle x1="-0.5" y1="0.5" x2="0.5" y2="-0.5"/>
        </primitive>
    </primitives>

    <!-- Composed objects -->
    <components>

        <component id="face1">
            <transformation>
                <transformationref id="trfFace1"/>
            </transformation>

            <materials>
                <material id="defaultMaterial"/>
            </materials>
           
            <texture id="1" length_s="1" length_t="1"/>

            <children>
                <primitiveref id="rect"/>
            </children>
        </component>

        <component id="face2">
            <transformation>
                <transformationref id="trfFace2"/>
            </transformation>

            <materials>
                <material id="defaultMaterial"/>
            </materials>
           
            <texture id="1" length_s="1" length_t="1"/>

            <children>
                <primitiveref id="rect"/>
            </children>
        </component>

        <component id="face3">
            <transformation>
                <transformationref id="trfFace3"/>
            </transformation>

            <materials>
                <material id="defaultMaterial"/>
            </materials>
           
            <texture id="1" length_s="1" length_t="1"/>

            <children>
                <primitiveref id="rect"/>
            </children>
        </component>

        <component id="face4">
            <transformation>
                <transformationref id="trfFace4"/>
            </transformation>

            <materials>
                <material id="defaultMaterial"/>
            </materials>
           
            <texture id="1" length_s="1" length_t="1"/>

            <children>
                <primitiveref id="rect"/>
            </children>
        </component>

        <component id="face5">
            <transformation>
                <transformationref id="trfFace5"/>
            </transformation>

            <materials>
                <material id="defaultMaterial"/>
            </materials>
           
           <texture id="1" length_s="1" length_t="1"/>

            <children>
                <primitiveref id="rect"/>
            </children>
        </component>

        <component id="face6">
            <transformation>
                <transformationref id="trfFace6"/>
            </transformation>

            <materials>
                <material id="defaultMaterial"/>
            </materials>
           
            <texture id="1" length_s="1" length_t="1"/>

            <children>
                <primitiveref id="rect"/>
            </children>
        </component>

        <!-- Vaporwave cube -->
        <component id="cube">
            <children>
                <componentref id="face1"/>
                <componentref id="face2"/>
                <componentref id="face3"/>
                <componentref id="face4"/>
                <componentref id="face5"/>
                <componentref id="face6"/>
            </children>
        </component>

        <!-- Root element -->
        <component id="root">
            <children>
                <componentref id="cube">
            </children>
        </component>

    </components>

</yas>