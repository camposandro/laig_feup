<yas>

    <!-- Initial values -->
    <scene root="root" axis_length="0.25"/>

    <!-- Views specification -->
    <views default="tempView">

        <perspective id="1" near="0.1" far="500" angle="1">
            <from x="10" y="0" z="0"/>
            <to x="-10" y="0" z="0"/>
        </perspective>

        <ortho id="2" near="0.1" far="500" left="-10" right="10" top="10" bottom="-10"/>
    
    </views>

    <!-- Ilumination parameters -->
    <ambient>
        <ambient r="0.3" g="0.5" b="1" a="1"/>
        <background r="0" g="0" b="0" a="1"/>
    </ambient>

    <!-- Light sources -->
    <lights>
        <omni id="1" enabled="1">
            <location x="0" y="30" z="0" w="1"/>
            <ambient r="0" g="0" b="0" a="0"/>
            <diffuse r="0.8" g="0.8" b="0.8" a="0.8"/>
            <specular r="0.1" g="0.1" b="0.1" a="0.1"/>
        </omni>
        <omni id="2" enabled="0">
            <location x="20" y="0" z="0" w="1"/>
            <ambient r="0" g="0" b="0" a="0"/>
            <diffuse r="0.6" g="0.6" b="0.6" a="0.5"/>
            <specular r="0.2" g="0.2" b="0.2" a="0.3"/>
        </omni>
    </lights>

    <!-- Textures -->
    <textures>
        <texture id="1" file="textures/vaporwave.png"/>
    </textures>

    <!-- Materials -->
    <materials>
        <material id="ss" shininess="ff">
            <emission r="ff" g="ff" b="ff" a="ff"/>
            <ambient r="ff" g="ff" b="ff" a="ff"/>
            <diffuse r="ff" g="ff" b="ff" a="ff"/>
            <specular r="ff" g="ff" b="ff" a="ff"/>
        </material>
    </materials>

    <!-- Transformations -->
    <transformations>
        <transformation id="ss">
            <translate x="ff" y="ff" z="ff" />
            <rotate axis="cc" angle="ff" /> <!-- angles in grad -->
            <scale x="ff" y="ff" z="ff" />
        </transformation>
    </transformations>

    <!-- Primitive objects -->
    <primitives>
        <primitive id="ss">
            <rectangle x1="ff" y1="ff" x2="ff" y2="ff"/>
            <triangle x1="ff" y1="ff" z1="ff"
                        x2="ff" y2="ff" z2="ff"
                        x3="ff" y3="ff" z3="ff"/>
            <cylinder base="ff" top="ff" height="ff" slices="ii" stacks="ii"/>
            <sphere radius="ff" slices="ii" stacks="ii"/>
            <torus inner="ff" outer="ff" slices="ii" loops="ii"/>
        </primitive>
    </primitives>

    <!-- Composed objects -->
    <components>

        <component id="ss">
            <transformation>
                <transformationref id="ss"/>
                    <translate x="ff" y="ff" z="ff"/>
                    <rotate axis="cc" angle="ff"/>
                    <scale x="ff" y="ff" z="ff"/>
            </transformation>

            <materials>
                <material id="ss"/>
            </materials>
           
            <texture id="ss" length_s="ff" length_t="ff"/>

            <children>
                <componentref id="ss"/>
                <primitiveref id="ss"/>
            </children>
        </component>

    </components>

</yas>
